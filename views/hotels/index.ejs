<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Hotels</h1>

    <% for (let hotel of hotels){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(hotel.images.length) {%>
                <img class="img-fluid" alt="" src="<%=hotel.images[Math.floor(Math.random() * 5)].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dfuxtjjyp/image/upload/v1740471516/shadowspec-hotel-umbrella-header_timrbn.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= hotel.title %> </h5>

                    <p class="card-text"><%= hotel.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= hotel.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/hotels/<%=hotel._id%>">View <%=hotel.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const hotels = { features: <%- JSON.stringify(hotels) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>